<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phlapg"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STUDENTS DATA ENTRY FORM "
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="28sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kindly Fill The Fields Correctlty !"
                android:textSize="18sp"
                android:textColor="#ffff"></TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="NAME"
                    android:inputType="text"
                    android:textColor="#ffff"
                    android:textColorHighlight="#ffff"
                    android:textColorHint="#ffff"
                    android:textColorLink="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="PARTNER NAME"
                    android:inputType="text"
                    android:textColorHint="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="ROLL NUMBER"
                    android:inputType="text"
                    android:textColor="#ffff"
                    android:textColorHint="#FFFFFF">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="PARTNER ROLL NUMBER"
                    android:inputType="text"
                    android:textColorHint="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="D.O.B"
                    android:inputType="text"
                    android:textColorHint="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="GENDER"
                    android:inputType="text"
                    android:textColorHint="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="DISCIPLANE"
                    android:inputType="text"
                    android:textColorHint="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="BATCH"
                    android:inputType="text"
                    android:textColorHint="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff"
                app:hintTextColor="#ffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="SEMESTER"
                    android:inputType="text"
                    android:textColorHint="#ffff">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#ffff"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"

                ></Button>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="CLOSE"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"

                ></Button>

        </LinearLayout>

    </ScrollView>









</RelativeLayout>