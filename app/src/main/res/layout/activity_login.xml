<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800080"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="100dp"

        android:layout_marginBottom="429dp"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:textColor="@color/splash_text" />



<!--        android:layout_constraintVertical_bias="0.418" />-->

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="100dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="348dp"
        android:drawableLeft="@drawable/pwd"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="254dp"
        android:drawableLeft="@drawable/mail"
        android:ems="10"
        android:hint="Enter E-mail"
        android:inputType="textEmailAddress"

         />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="162dp"
        android:layout_marginTop="537dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="146dp"
        android:hint="Submit"  />


<!--        android:layout_constraintHorizontal_bias="1.0"-->
<!--        android:layout_constraintTop_toTopOf="parent"-->
<!--        android:layout_constraintVertical_bias="0.751" -->



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="515dp"
        android:src="@drawable/circle"

         />

    <TextView
        android:id="@+id/textView"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="621dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="54dp"
        android:text=" Don't have Account?"
        android:textSize="18sp" />

<!--        android:layout_constraintHorizontal_bias="0.392"-->
    >



</RelativeLayout>


